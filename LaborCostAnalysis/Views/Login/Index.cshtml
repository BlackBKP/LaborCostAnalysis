<!-- Login Index -->
@model LaborCostAnalysis.Models.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="width:100vw;height:100vh;background-image:url('../../wwwroot/images/CTL_LCA_Login.jpg')">
    <div class="container-fluid d-flex justify-content-end" style="padding-top:25vh;padding-right:15%">
        <div class="row justify-content-center">
            <div class="card elevation-4" style="vertical-align:middle">
                <div class="card-body">
                    <form role="form" asp-action="Login" asp-controller="Login" method="post" style="width:450px">
                        <br /><br />
                        <div class="form-group">
                            <h1 style="color:darkblue;font-weight:bold">LABOR COST ANALYSIS</h1>
                        </div>

                        <br /><br />

                        <div class="form-group">
                            <label for="username"><strong>Username</strong></label>
                            <input id="username" class="form-control" type="text" name="username" asp-for="username" autocomplete="on" placeholder="Username" />
                            @*<p class="is-invalid" style="color:red">Wrong Username</p>*@
                        </div>

                        <br />

                        <div class="form-group">
                            <label for="password"><strong>Password</strong></label>
                            <input id="password" class="form-control" type="password" name="password" asp-for="password" placeholder="Password" />
                            @*<p class="is-invalid" style="color:red">Wrong Password</p>*@
                        </div>

                        <br />

                        <div class="form-group">
                            <input type="submit" class="form-control btn-primary" value="Login" />
                        </div>
                        <br />

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
