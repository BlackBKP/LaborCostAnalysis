@using Microsoft.AspNetCore.Http
@{
    var Admin = Context.Session.GetString("Admin");
}
<aside class="main-sidebar sidebar-dark-primary elevation-2">
    <!-- Brand Logo -->
    <a class="brand-link" asp-controller="Home" asp-action="Index">
        <img src="~/images/icon.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Labor Cost Analysis</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar" style="padding-left:5px">
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="nav-icon fas fa-home"></i>
                        <p>Job View</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Spent" asp-action="Index">
                        <i class="nav-icon fas fa-chart-line"></i>
                        <p>Spent</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ManPower" asp-action="Index">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <p>Manpower</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="NormalOvertime" asp-action="Index">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <p>Normal Overtime Ratio</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="JobSummary" asp-action="Index">
                        <i class="nav-icon fas fa-table"></i>
                        <p>Summary</p>
                    </a>
                </li>

                @if (Admin == "Admin" || Admin == "Human Resource")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobManagement" asp-action="Index">
                            <i class="nav-icon fas fa-chart-area"></i>
                            <p>Job Management</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                            <i class="nav-icon fas fa-user"></i>
                            <p>User Management</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin" || Admin == "Human Resource")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ImportJob" asp-action="Index">
                            <i class="nav-icon fas fa-money-bill-wave"></i>
                            <p>Import Job</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin" || Admin == "Accounting")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ImportLaborCost" asp-action="Index">
                            <i class="nav-icon fas fa-money-bill-wave"></i>
                            <p>Import Labor Cost</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin" || Admin == "Human Resource")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ImportWorkingHour" asp-action="Index">
                            <i class="nav-icon fas fa-upload"></i>
                            <p>Import Working Hours</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin" || Admin == "Human Resource")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ImportOvertime" asp-action="Index">
                            <i class="nav-icon fas fa-upload"></i>
                            <p>Import Overtimes</p>
                        </a>
                    </li>
                }

                @if (Admin == "Admin" || Admin == "Project Manager")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ImportProgress" asp-action="Index">
                            <i class="nav-icon fas fa-upload"></i>
                            <p>Import Progress</p>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" asp-controller="LogOut" asp-action="LogOut">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>Log Out</p>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>