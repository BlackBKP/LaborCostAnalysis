<!-- Import Job Index -->
@{
    ViewData["Title"] = "Import Job";
}
<div class="container-fluid" style="padding-top:10px">

    <div class="info-box bg-dark">
        <div class="info-box-content">
            <h3 class="info-box-text">IMPORT JOB</h3>
        </div>
    </div>

    <div class="card card-dark">
        <div class="card-header">
            <span class="card-title">Select File to Upload</span>
            <div class="card-tools">
                <button type="button" class="btn btn-dark btn-sm" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-dark btn-sm" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <label id="import_file_label">Choose File</label>
            <input id="import_file" class="form-control-file" type="file" />
        </div>
    </div>

    <div class="card card-dark">
        <div class="card-header">
            <span class="card-title">Jobs Available to Import</span>
        </div>
        <div class="card-body">
            <table id="table_import" class="table table-sm table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Number</th>
                        <th>Job Name</th>
                        <th>Job Year</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary float-right" type="button">
                Import
            </button>
            <button class="btn btn-danger float-right" type="button">
                Cancel
            </button>
        </div>
    </div>

    <div class="card card-dark">
        <div class="card-header">
            <span class="card-title">Duplicated Job</span>
        </div>
        <div class="card-body">
            <table id="table_duplicate" class="table table-sm table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Number</th>
                        <th>Job Name</th>
                        <th>Job Year</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>

</div>

<!-- Import Job Modal -->
<div class="modal" id="ModalImportJobs">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5>Import Jobs</h5>
                <button class="close" type="button" data-dismiss="modal">
                    &times;
                </button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form>
                    <label id="import_file_label">Select File</label>
                    <input id="import_file" class="form-control-file" type="file" />
                    <div id="div_upload" style="display:none">
                        <hr />
                        <label for="UploadedJobs">Uploaded Jobs</label>
                        <table id="UploadedJobs" class="table table-sm table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Job ID</th>
                                    <th>Job Number</th>
                                    <th>Job Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>J21-0001</td>
                                    <td>TESTJOB (A)</td>
                                </tr>
                                <tr>
                                    <td>J21-0002</td>
                                    <td>TESTJOB (B)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button id="btn_confirm_import" class="btn btn-primary" disabled>
                    Confirm
                </button>
                <button class="btn btn-danger" type="button" data-dismiss="modal">
                    Cancel
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        $('#btn_import_job').on('click', function () {
            $('#ModalImportJobs').modal("show");
            $('#div_upload').hide();
            $('#btn_confirm_import').attr('disabled', true);
            import_table = null;
            $('#import_file').val(null);
            $('#import_file_label').text("Select File");
        });

        var duplicate_jobs = [];
        var import_jobs = [];
        $('#import_file').on('change', async function () {
            var fileExtension = ['xls', 'xlsx'];
            var filename = $('#import_file').val();

            if (filename.length == 0) {
                alert("Please Select a File");
            }
            else {
                var extension = filename.replace(/^.*\./, '');
                if ($.inArray(extension, fileExtension) == -1) {
                    alert("Please select only excel files.");
                }
            }

            var fdata = new FormData();
            var fileupload = $('#import_file').get(0);
            var files = fileupload.files;

            fdata.append(files[0].name, files[0]);
            $('#import_file_label').text(files[0].name);

            await $.ajax({
                type: "POST",
                url: "ImportJob/Import",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                data: fdata,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.length == 0)
                        alert('Some error occured while uploading');
                    else {
                        console.log("Response");
                        console.log(response);
                        import_jobs = response[0];
                        duplicate_jobs = response[1];
                        GenImportTable();
                        GenDuplicateTable();
                    }
                },
            });
        });

        var import_table;
        function GenImportTable() {
            import_jobs.length > 0 ? $('#btn_confirm_import').attr('disabled', false) : $('#btn_confirm_import').attr('disabled', true);
            $('#div_upload').show();
            var datas = [];
            for (var i = 0; i < import_jobs.length; i++) {
                datas.push([
                    import_jobs[i].job_id,
                    import_jobs[i].job_number,
                    import_jobs[i].job_name,
                    import_jobs[i].job_year,
                ]);
            }

            @*if (import_table != null)
                $('#UploadedJobs').DataTable().destroy();*@

            @*import_table = $('#UploadedJobs').DataTable({
                data: datas,
                pagingType: "full_numbers",
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
            });*@

            if (import_table != null)
                $('#table_import').DataTable().destroy();

            import_table = $('#table_import').DataTable({
                data: datas,
                pagingType: "full_numbers",
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
            });

        }

        $('#btn_confirm_import').on('click', function () {
            ConfirmImport();
        });

        function ConfirmImport() {
            $('#btn_confirm_import').attr('disabled', true);
            $('#modal_upload').modal("show");
            $.ajax({
                type: "POST",
                url: '@Url.Action("ConfirmImport", "ImportJob")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {

                },
                success: function (response) {
                    $('#modal_upload').hide();
                    window.location.reload();
                }
            })
        }

        var duplicate_table;
        function GenDuplicateTable() {
            console.log("Duplicate Job");
            console.log(duplicate_jobs);
            if (duplicate_table != null)
                $('#table_duplicate').DataTable().destroy();
            var datas = [];
            if (duplicate_jobs.length > 0) {
                for (var i = 0; i < duplicate_jobs.length; i++) {
                    datas.push([
                        duplicate_jobs[i].job_id,
                        duplicate_jobs[i].job_number,
                        duplicate_jobs[i].job_name,
                        duplicate_jobs[i].job_year,
                    ]);
                }

                duplicate_table = $('#table_duplicate').DataTable({
                    data: datas,
                    pagingType: "full_numbers",
                    lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
                });
            }
        }

    </script>
}